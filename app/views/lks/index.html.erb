<h1>Listing lks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lks.each do |lk| %>
      <tr>
        <td><%= lk.name %></td>
        <td><%= lk.content %></td>
        <td><%= lk.url %></td>
        <td><%= link_to 'Show', lk %></td>
        <td><%= link_to 'Edit', edit_lk_path(lk) %></td>
        <td><%= link_to 'Destroy', lk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lk', new_lk_path %>
